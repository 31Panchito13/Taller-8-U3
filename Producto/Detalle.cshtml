@model Front_Login.Models.Producto

@{
    ViewData["Title"] = "Registrar Producto";
    var categorias = ViewBag.Categorias as List<Front_Login.Models.Categoria>;
}

<h2>Producto</h2>
<h2>@Model.NomProducto</h2>

<!-- Agrega estos mensajes de alerta -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<style>
    #client-button {
        background-color: blue;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        margin-right: 10px;
    }

        #client-button:hover {
            background-color: darkblue;
        }

    .btn-cancel {
        background-color: #6c757d;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
    }

        .btn-cancel:hover {
            background-color: #545b62;
            color: white;
            text-decoration: none;
        }
</style>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre del Producto</th>
            <th>Descripcion</th>
            <th>Estado</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Categoria</th>



        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            <tr>
                <td>@Model.IdProducto</td>
                <td>@(Model.NomProducto ?? "N/A")</td>
                <td>@(Model.DcProducto ?? "N/A")</td>
                <td>@(Model.EsProducto ?? "N/A")</td>


                <td>@(Model.PreProducto)</td>
                <td>@(Model.StockProducto)</td>


                <td>@(Model.Categoria.NomCategoria ?? "N/A")</td>
            </tr>
        }
    </tbody>
</table>

<h2>Editar Producto</h2>



<form method="post" asp-action="actualizarProducto">
    <input type="hidden" asp-for="IdProducto" />

    <div class="form-group">
        <label>ID </label>
        <input asp-for="IdProducto" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Nombre del Producto</label>
        <input asp-for="NomProducto" class="form-control" />
    </div>
    <div class="form-group">
        <label>Descripcion de producto</label>
        <input asp-for="DcProducto" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EsProducto" class="form-label">Estado</label>
        <select asp-for="EsProducto" class="form-select">
            <option value="Disponible">Disponible</option>
            <option value="Agotado">Agotado</option>
            <option value="Inactivo">Inactivo</option>
        </select>
    </div>

    <div class="form-group">
        <label>Precio</label>
        <input asp-for="PreProducto" class="form-control" />
    </div>
    <div class="form-group">
        <label>Stock</label>
        <input asp-for="StockProducto" class="form-control" />
    </div>


    <div class="form-group">
       @*  <label asp-for="Categoria.IdCategoria" class="form-label">Categoría</label>
        <select asp-for="Categoria.IdCategoria" class="form-select">
            <option value="">-- Selecciona una categoría --</option>
            @if (categorias != null)
            {
                foreach (var c in categorias)
                {
                    <option value="@c.IdCategoria">@c.NomCategoria (@c.EstadoCategoria)</option>
                }
            }
        </select> *@
        <div class="form-group">
            <label>Categoria </label>
            <input asp-for="Categoria.NomCategoria" class="form-control" readonly />
        </div>
    </div>
    <br />
    @* <button type="button" id="client-button" onclick="editarUsuario()">Guardar Cambios</button> <br> *@
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>

</form>

