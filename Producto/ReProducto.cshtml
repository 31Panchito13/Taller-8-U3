@model Front_Login.Models.Producto

@{
    ViewData["Title"] = "Registrar Producto";
    var categorias = ViewBag.Categorias as List<Front_Login.Models.Categoria>;
}

<div class="container mt-5">
    <h2 class="text-center mb-4">🆕 Registrar Nuevo Producto</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-controller="Producto" asp-action="ReProducto" method="post" class="shadow p-4 rounded bg-light">

        <div class="mb-3">
            <label asp-for="NomProducto" class="form-label">Nombre del Producto</label>
            <input asp-for="NomProducto" class="form-control" placeholder="Ej: Camiseta básica" />
        </div>

        <div class="mb-3">
            <label asp-for="DcProducto" class="form-label">Descripción</label>
            <textarea asp-for="DcProducto" class="form-control" rows="3" placeholder="Ej: Camiseta 100% algodón"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="EsProducto" class="form-label">Estado</label>
            <select asp-for="EsProducto" class="form-select">
                <option value="Disponible">Disponible</option>
                <option value="Agotado">Agotado</option>
                <option value="Inactivo">Inactivo</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="PreProducto" class="form-label">Precio</label>
            <input asp-for="PreProducto" type="number" step="0.01" class="form-control" placeholder="Ej: 15.99" />
        </div>

        <div class="mb-3">
            <label asp-for="StockProducto" class="form-label">Stock</label>
            <input asp-for="StockProducto" type="number" class="form-control" placeholder="Ej: 100" />
        </div>

       <div class="mb-3">
    <label asp-for="Categoria.IdCategoria" class="form-label">Categoría</label>
    <select asp-for="Categoria.IdCategoria" class="form-select">
        <option value=""> Selecciona una categoría </option>
        @if (categorias != null)
        {
            foreach (var c in categorias)
            {
                <option value="@c.IdCategoria">@c.NomCategoria (@c.EstadoCategoria)</option>
            }
        }
    </select>
</div>


        <button type="submit" class="btn btn-primary w-100"> Guardar Producto</button>
        <a asp-action="Index" class="btn btn-secondary w-100 mt-2"> Volver al listado</a>

    </form>
</div>
