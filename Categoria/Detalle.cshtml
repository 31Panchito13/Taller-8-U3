@model Front_Login.Models.Categoria

@{
    ViewData["Title"] = "Registrar Producto";
    var categorias = ViewBag.Categorias as List<Front_Login.Models.Categoria>;
}

<h2>Producto</h2>
<h2>@Model.NomCategoria</h2>

<!-- Agrega estos mensajes de alerta -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<style>
    #client-button {
        background-color: blue;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        margin-right: 10px;
    }

        #client-button:hover {
            background-color: darkblue;
        }

    .btn-cancel {
        background-color: #6c757d;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
    }

        .btn-cancel:hover {
            background-color: #545b62;
            color: white;
            text-decoration: none;
        }
</style>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Producto</th>
            <th>Descripcion</th>
            <th>Estado</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Categoria</th>



        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            <tr>
                <td>@Model.IdCategoria</td>
                <td>@(Model.NomCategoria?? "N/A")</td>
                <td>@(Model.EstadoCategoria?? "N/A")</td>
              
            </tr>
        }
    </tbody>
</table>

<h2>Editar Producto</h2>



<form method="post" asp-action="actualizarProducto">
    <input type="hidden" asp-for="IdCategoria" />

    <div class="form-group">
        <label>ID </label>
        <input asp-for="IdCategoria" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Nombre del Producto</label>
        <input asp-for="NomCategoria" class="form-control" />
    </div>
    <div class="form-group">
        <label>Descripcion de producto</label>
        <input asp-for="EstadoCategoria" class="form-control" />
    </div>

    <br />
    @* <button type="button" id="client-button" onclick="editarUsuario()">Guardar Cambios</button> <br> *@
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>

</form>

