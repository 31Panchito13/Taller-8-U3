@model Front_Login.Models.Doctor

@{
    ViewData["Title"] = "Editar Doctor";
    var especialidades = ViewBag.Especialidades as List<Front_Login.Models.Especialidad>;
}

<h2 class="text-center mt-3">Editar Doctor</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="Editar" method="post" class="w-50 mx-auto">
    <input type="hidden" asp-for="IdDoctor" />

    <div class="form-group mb-2">
        <label>Nombre</label>
        <input asp-for="NomDoctor" class="form-control" />
        <span asp-validation-for="NomDoctor" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label>Apellidos</label>
        <input asp-for="ApellidosDoctor" class="form-control" />
        <span asp-validation-for="ApellidosDoctor" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label>Correo</label>
        <input asp-for="emailDoctor" class="form-control" />
        <span asp-validation-for="emailDoctor" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label>Edad</label>
        <input asp-for="edadDoctor" class="form-control" />
        <span asp-validation-for="edadDoctor" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label>Estado</label>
        <select asp-for="estadoDoctor" class="form-select">
            <option value="">-- Seleccione --</option>
            <option value="Activo" selected="@("Activo" == Model.estadoDoctor)">Activo</option>
            <option value="Inactivo" selected="@("Inactivo" == Model.estadoDoctor)">Inactivo</option>
        </select>
        <span asp-validation-for="estadoDoctor" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Especialidad</label>
        <select asp-for="fkIdEspecialidad.IdCategoria" class="form-select">
            <option value="">-- Seleccione Especialidad --</option>
            @foreach (var esp in especialidades)
            {
                <option value="@esp.IdCategoria" selected="@(esp.IdCategoria == Model.fkIdEspecialidad?.IdCategoria)">
                    @esp.NomCategoria
                </option>
            }
        </select>
    </div>

    <div class="text-center mt-3">
        <button type="submit" class="btn btn-primary">💾 Guardar cambios</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
